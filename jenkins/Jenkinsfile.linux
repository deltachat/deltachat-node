pipeline {
  agent {
    docker {
      image 'deltachat/debian-stretch-node-11'
      args '-v "$HOME":/home/jenkins:rw,z'
      alwaysPull true
    }
  }
  stages {
    stage('Install') {
      steps {
        sh 'rm -rf deltachat-core && npm run submodule'
        sh 'npm install'
      }
    }
    stage('Tests') {
      environment {
        DC_ADDR = credentials('dc-addr')
        DC_MAIL_PW = credentials('dc-mail-pw')
      }
      steps {
        sh 'npm test'
      }
    }
    stage('Prebuild') {
      environment {
        GH_TOKEN = credentials('github-token')
      }
      steps {
        sh 'npm run prebuild'
      }
    }
  }
  post {
    always {
      sh 'rm -rf node_modules/ build/ prebuilds/'
    }
  }
}