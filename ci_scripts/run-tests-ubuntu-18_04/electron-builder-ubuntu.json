{
  "appId": "com.deltachat.desktop",
  "linux": {
    "artifactName": "${productName}-${env.BUILDER_NAME}-${version}.${ext}",
    "target": [
      "deb"
    ],
    "category": "Utility",
    "depends": [
      "libsasl2-2",
      "libssl1.0.0",
      "libsqlite3-0"
    ]
  },
  "files": [
    "!node_modules/deltachat-node/deltachat-core${/*}",
    "!**/*",
    "node_modules",
    "_locales/*.json",
    "index.js",
    "src",
    "!src/renderer",
    "static",
    "images"
  ],
  "directories": {
    "output": "dist/${env.BUILDER_NAME}"
  }
}
