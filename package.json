{
  "name": "deltachat-node",
  "version": "0.25.0",
  "description": "node.js bindings for deltachat-core",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coverage-html-report": "rm -rf coverage/ && nyc report --reporter=html && opn coverage/index.html",
    "dependency-check": "dependency-check package.json --missing --unused -i dependency-check -i nyc -i opn-cli -i standard -i napi-macros -i coveralls --entry index.js --entry test/index.js --entry scripts/*.js",
    "generate-constants": "./scripts/generate-constants.js",
    "install": "node-gyp-build scripts/rebuild-core.js",
    "prebuild": "node scripts/prebuildify.js",
    "submodule": "git submodule update --recursive --init",
    "test": "standard && npm run dependency-check && nyc node test/index.js"
  },
  "homepage": "https://github.com/deltachat/deltachat-node",
  "repository": {
    "type": "git",
    "url": "https://github.com/deltachat/deltachat-node.git"
  },
  "engines": {
    "node": ">=8"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "debug": "^4.0.0",
    "got": "^9.2.2",
    "lodash.pick": "^4.4.0",
    "mkdirp": "^0.5.1",
    "napi-macros": "^1.7.0",
    "node-gyp-build": "^3.4.0",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "dependency-check": "^3.2.0",
    "ghreleases": "^3.0.1",
    "node-abi": "^2.5.0",
    "nyc": "^12.0.2",
    "opn-cli": "^4.0.0",
    "prebuildify": "^2.9.1",
    "split2": "^3.0.0",
    "standard": "^12.0.0",
    "tape": "^4.9.1",
    "tar": "^4.4.8",
    "tempy": "^0.2.1",
    "version-changed": "^1.0.0"
  }
}
